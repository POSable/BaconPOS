<div class="well col-md-4 col-md-offset-4 text-center">
<div class='col-md-10 col-md-offset-1'>
  <h4>Account Login</h4>

    <%= form_tag signin_path do |f| %>

      <% if @sign_in_error %>
        <p>
      <%= @sign_in_error %>
        </p>
      <% end %>
  <br>
  <div class="form-group">
    <%= text_field_tag :username, nil, placeholder: 'Username', class: "form-control" %>
  </div>

  <div class="form-group">
    <%= password_field_tag :password, nil, placeholder: 'Password', class: "form-control" %>
  </div>

  <div class='form-group'>
    <%= submit_tag "Sign in", class: 'btn btn-info btn-lg btn-item' %>
  </div>

<% end %>
</div>
</div>
